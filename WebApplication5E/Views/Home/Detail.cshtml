@model WebApplication5E.Models.View.DetailViewModel
@{
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}


@if (Model.Prodotto != null)
{
    <h2>@Model.Prodotto.Nome</h2>
    <img src="@WebApplication5E.Helpers.PathHelper.GetProdottoImagePath(Model.Prodotto)" />
    <p>@Model.Prodotto.Descrizione</p>
    <p>€ @Model.Prodotto.Prezzo</p>
    <p>Quantità @Model.Prodotto.Quantita</p>

}
else
{
    <h2>@ViewBag.Title</h2>
    <p>@Model.MessaggioErrore</p>
}

